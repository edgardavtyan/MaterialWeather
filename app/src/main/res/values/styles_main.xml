<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Text.Small.Secondary">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="Text.Contrast">
        <item name="android:textColor">@color/textColorContrastPrimary</item>
        <item name="android:shadowColor">@color/textColorPrimary</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="Text.Contrast.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Contrast.Thin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

</resources>